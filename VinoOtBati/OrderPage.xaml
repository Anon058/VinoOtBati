<Page x:Class="VinoOtBati.OrderWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VinoOtBati"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderWindow" Background="#F3E5F5 " Height="521" Width="825" Foreground="#7B1FA2 ">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Состав заказа" FontSize="20" FontWeight="Bold" Margin="10"/>
        <ListView Name="OrderListView" Margin="10,40,10,60" Background="#F3E5F5 " Foreground="#7B1FA2 ">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding ProductName}" Width="200" />
                        <TextBlock Text="{Binding PricePerUnit}" TextDecorations="Strikethrough" Width="100" />
                        <TextBlock Text="{Binding DiscountedPrice}" Width="100" />
                        <Button Content="Удалить" Width="75" Background="#F3E5F5 " Foreground="#7B1FA2 " Click="RemoveButton_Click" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock x:Name="TotalCostText" FontSize="16" Margin="10,0,0,10" VerticalAlignment="Bottom"/>
        <Button Content="Закрыть" Width="100" Height="30" Background="#F3E5F5 " Foreground="#7B1FA2 " VerticalAlignment="Bottom" Margin="10" Click="CloseButton_Click"/>
    </Grid>
</Page>
