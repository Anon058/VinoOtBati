<Window x:Class="VinoOtBati.ManagerOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление заказами" Height="600" Width="800"
        FontFamily="Pacifico" Background="#F3E5F5" Foreground="#7B1FA2">
    <Grid>
        <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="False" IsReadOnly="True"
                 Background="#F3E5F5" Foreground="#7B1FA2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding OrderID}" Width="Auto"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}" Width="Auto"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Users.FullName}" Width="*"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalCost, StringFormat={}{0:C}}" Width="Auto"/>
                <DataGridTemplateColumn Header="Состав" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Просмотр" Click="ViewOrderDetails_Click"
                                    Background="#F3E5F5" Foreground="#7B1FA2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>